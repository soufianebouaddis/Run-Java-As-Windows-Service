<service>
  <id>MyQuartzService</id>
  <name>My Quartz Job Scheduler Service</name>
  <description>This service runs the Quartz scheduler Java application.</description>

  <!-- Path to the JAR file -->
  <executable>java</executable>
  <arguments>-jar C:\Users\Snof_Bo\Desktop\WinSW\QuartzSchedulerService.jar</arguments>

  <!-- Log output files -->
  <logpath>C:\Users\Snof_Bo\Desktop\WinSW</logpath>
  <log mode="roll-by-size">
    <sizeThreshold>10240</sizeThreshold>
    <keepFiles>5</keepFiles>
  </log>
  <onfailure action="restart" delay="10 sec"/>
</service>
